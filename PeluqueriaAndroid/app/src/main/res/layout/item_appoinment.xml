<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemAppoinmentTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/palewarmpurple"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemAppoinmentTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="TextView"
        android:textColor="@color/palewarmpurple"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemAppoinmentTextName"
        app:layout_constraintStart_toEndOf="@+id/itemAppoinmentTextName" />

    <TextView
        android:id="@+id/itemAppoinmentTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="TextView"
        android:textColor="@color/palewarmpurple"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemAppoinmentTextDate"
        app:layout_constraintStart_toEndOf="@+id/itemAppoinmentTextDate" />

</androidx.constraintlayout.widget.ConstraintLayout>